# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/bin" ] ; then
    PATH="$HOME/bin:$PATH"
fi

export LANGUAGE="zh_CN:en"
export LC_MESSAGES="zh_CN.UTF-8"
export LC_CTYPE="zh_CN.UTF-8"
export LC_COLLATE="zh_CN.UTF-8"

#for color man
export LESS_TERMCAP_mb=$'\E[01;34m'
export LESS_TERMCAP_md=$'\E[01;34m'
export LESS_TERMCAP_me=$'\E[0m'
export LESS_TERMCAP_se=$'\E[0m'
export LESS_TERMCAP_so=$'\E[01;44;33m'
export LESS_TERMCAP_ue=$'\E[0m'
export LESS_TERMCAP_us=$'\E[01;33m'

#用户配置
export PATH="$DOTFILE/bin:$PATH"

export JAVA_HOME="$HOME/soft/java"
export PATH="$JAVA_HOME/bin:$PATH"

export REDIS_HOME="$HOME/soft/redis"
export PATH="$REDIS_HOME/bin:$PATH"

export MVN_HOME="$HOME/soft/maven"
export PATH="$MVN_HOME/bin:$PATH"

export GOROOT="$HOME/soft/go"
export GOPATH="$HOME/var/go:$HOME/workspace/go"
export PATH="$GOROOT/bin:$PATH"

export PHANTOMJSPATH="$HOME/soft/phantomjs"
export PATH="$PHANTOMJSPATH/bin:$PATH"

export ANT_HOME="$HOME/soft/ant"
export PATH="$ANT_HOME/bin:$PATH"

export PB_HOME="$HOME/soft/protobuf"
export PATH="$PB_HOME/bin:$PATH"

#export PATH="$HOME/soft/google_appengine:$PATH"

export VAGRANT_HOME="$HOME/var/workspace/vagrant"

export ADT_HOME="$HOME/soft/adt/sdk"
export ANDROID_HOME="$HOME/soft/adt/sdk"
export PATH="$ADT_HOME/platform-tools:$ADT_HOME/tools:$PATH"

export SCALA_HOME="$HOME/soft/scala"
export PATH="$SCALA_HOME/bin:$PATH"

export GRADLE_HOME="$HOME/soft/gradle"
export PATH="$GRADLE_HOME/bin:$PATH"

export WORKON_HOME="/mnt/workspace/virtualenvs"
